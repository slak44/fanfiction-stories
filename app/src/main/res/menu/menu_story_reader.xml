<menu xmlns:android="http://schemas.android.com/apk/res/android"
      xmlns:app="http://schemas.android.com/apk/res-auto"
      xmlns:tools="http://schemas.android.com/tools"
      tools:context="slak.fanfictionstories.StoryReaderActivity">
    <item
        android:id="@+id/selectChapter"
        android:icon="@drawable/ic_arrow_drop_down_black_24dp"
        android:title="@string/select_chapter"
        android:visible="true"
        app:showAsAction="ifRoom"/>
    <item
        android:id="@+id/goToTop"
        android:icon="@drawable/ic_arrow_upward_black_24dp"
        android:title="@string/go_to_top"
        android:visible="true"
        app:showAsAction="always"/>
    <item
        android:id="@+id/goToBottom"
        android:icon="@drawable/ic_arrow_downward_black_24dp"
        android:title="@string/go_to_bottom"
        android:visible="true"
        app:showAsAction="always"/>
    <item
        android:id="@+id/nextChapter"
        android:title="@string/next_chapter"
        android:visible="true"
        app:showAsAction="never"/>
    <item
        android:id="@+id/prevChapter"
        android:title="@string/prev_chapter"
        android:visible="true"
        app:showAsAction="never"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</menu>
